<odoo>
    <record id="view_alumno_tree" model="ir.ui.view">
        <!-- Vista de lista de alumnos -->
        <field name="name">Lista de Alumnos</field>
        <field name="model">challenge.alumno</field>
        <field name="arch" type="xml">
            <tree>
                <field name="nombre"/>
                <field name="apellido"/>
                <field name="nro_legajo"/>
                <field name="fecha_nacimiento"/>
                <field name="email"/>
                <field name="telefono"/>
                <field name="direccion"/>           
                <field name="pais_id"/>
            </tree>
        </field>
    </record>

    <!-- Formulario de Alumno -->
    <record id="view_alumno_form" model="ir.ui.view">
        <field name="name">Formulario de Alumno</field>
        <field name="model">challenge.alumno</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="nombre"/>
                        <field name="apellido"/>
                        <field name="nro_legajo"/>
                        <field name="fecha_nacimiento"/>
                        <field name="email"/>
                        <field name="telefono"/>
                        <field name="direccion"/>           
                        <field name="pais_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
