<odoo>
    <record id="view_programa_tree" model="ir.ui.view">
        <!-- Vista de lista de programas -->
        <field name="name">Lista de Programas</field>
        <field name="model">challenge.programa</field>
        <field name="arch" type="xml">
            <tree>
                <field name="nombre"/>
                <field name="descripcion"/>
            </tree>
        </field>
    </record>

    <!-- Formulario de Programa -->
    <record id="view_programa_form" model="ir.ui.view">
        <field name="name">Formulario de Programa</field>
        <field name="model">challenge.programa</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="nombre"/>
                        <field name="descripcion"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
