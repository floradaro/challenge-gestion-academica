<odoo>
    <record id="view_inscripcion_tree" model="ir.ui.view">
        <!-- Vista de lista de inscripciones -->
        <field name="name">Lista de Inscripciones</field>
        <field name="model">challenge.inscripcion</field>
        <field name="arch" type="xml">
            <tree>
                <field name="alumno_id"/>
                <field name="programa_id"/>
                <field name="fecha_inscripcion"/>
            </tree>
        </field>
    </record>

    <!-- Formulario de Inscripción -->
    <record id="view_inscripcion_form" model="ir.ui.view">
        <field name="name">Formulario de Inscripción</field>
        <field name="model">challenge.inscripcion</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="alumno_id"/>
                        <field name="programa_id"/>
                        <field name="fecha_inscripcion"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
